<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>
        <import type="nl.entreco.reversi.model.Stone.Color" alias="stone" />
        <variable name="arbiter" type="nl.entreco.reversi.model.Arbiter"/>
        <variable name="viewModel" type="nl.entreco.reversi.ReversiViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ccc"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

        <include android:id="@+id/score_view" layout="@layout/score_view" app:game="@{viewModel.game}" />

    </android.support.design.widget.CoordinatorLayout>
</layout>
